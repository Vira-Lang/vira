{
  "name": "vira",
  "version": "0.1.0",
  "description": "Vira CLI in JavaScript",
  "main": "main.js",
  "scripts": {
    "start": "node main.js",
    "build": "rimraf dist && pkg . --targets node18-linux-x64,node18-macos-x64,node18-win-x64 --output dist/vira"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^9.4.1",
    "inquirer": "^8.2.5",
    "js-yaml": "^4.1.0",
    "ora": "^5.4.1",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "bin": {
    "vira": "./main.js"
  },
  "pkg": {
    "scripts": [
      "main.js",
      "utils/*.js",
      "commands/*.js"
    ],
    "assets": [
      "templates/**/*",
      "config/**/*"
    ],
    "outputPath": "dist"
  },
  "author": "Michal92299",
  "license": "BSD-3"
}
